#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/gits'

Gits.initialize

begin
  Gits.previously_cloned_repositories
  Gits.repository_prompt
  Gits.handle_selected_repository

  loop do
    Gits.search_query_prompt

    puts Gits.search_results
  end
rescue Interrupt => _e
  exit
end
